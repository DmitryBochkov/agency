- var socialItems = ['facebook', 'twitter', 'google-plus', 'linkedin']
- var socialURLs = ['facebook.com', 'twitter.com', 'googl.com', 'linkedin.com']

footer.footer 
  .footer__top
    .container
      .social 
        h4.social__title Get in touch
        .social__links
          each item, key in socialItems
            a(href="http://" + socialURLs[key], target="_blank").social__link
              i(class="fa fa-" + item)
      
      .subscription
        .subscription__text Subscribe to our newsletter to stay update with what is new
        form(action="#" method="post").subscription__form
          .subscription__fields
            input.subscription__input(type='email', name='email' placeholder='Email Address')
          button.button.button--subscription(type="submit") Subscribe

          
      
  .footer__bottom
    .footer__copyright Cssauthor.com Â© 2014 All Rights Reserved
